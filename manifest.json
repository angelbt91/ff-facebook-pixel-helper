{

  "manifest_version": 2,
  "name": "FF Pixel Helper",
  "version": "1.0.2",

  "description": "Unofficial Facebook Pixel Helper extension for Firefox. View all Facebook events fired on the current page.",

  "icons": {
    "48": "icons/icon-48x48.png",
    "96": "icons/icon-96x96.png"
  },

  "browser_action": {
    "default_icon": "icons/icon-32x32.png",
    "default_title": "FF Pixel Helper",
    "default_popup": "popup/build/index.html"
  },

  "background": {
    "scripts": ["ff-pixel-helper-background.js"]
  },

  "permissions": ["*://*/*", "webRequest", "webNavigation"]

}